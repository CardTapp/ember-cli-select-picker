<h1>list-picker</h1>

<div id="single-picker">
  {{list-picker content=theContent
                value=singleValue
                optionLabelPath="content.name"
                optionValuePath="content.id"}}
</div>

<div id="multiple-picker">
  {{list-picker content=theContent
                selection=multipleValue
                multiple=true
                optionLabelPath="content.name"
                optionValuePath="content.id"}}
</div>
