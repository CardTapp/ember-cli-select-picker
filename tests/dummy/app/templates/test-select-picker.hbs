<h1>select-picker</h1>

<div id="single-picker">
  {{select-picker content=theContent
                  value=singleValue
                  optionLabelPath="content.name"
                  optionValuePath="content.id"}}
</div>

<div id="multiple-picker">
  {{select-picker content=theContent
                  selection=multipleValue
                  multiple=true
                  showBadge=true
                  optionLabelPath="content.name"
                  optionValuePath="content.id"}}
</div>

<div id="normal-search-picker">
  {{!select-picker content=theContent
                  multiple=true
                  selection=multipleValue
                  liveSearch=true
                  optionLabelPath="content.name"
                  optionValuePath="content.id"}}
</div>

<div id="advanced-search-picker">
  {{!select-picker content=theContent
                  multiple=true
                  selection=multipleValue
                  liveSearch="advanced"
                  optionLabelPath="content.name"
                  optionValuePath="content.id"}}
</div>
